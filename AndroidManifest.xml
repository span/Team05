<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.team05"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NewRouteActivity"
            android:label="@string/new_route" >
        </activity>
        <activity
            android:name=".activity.UseExistingRouteActivity"
            android:label="@string/use_route" >
        </activity>
        <activity
            android:name=".WhileRunningOldActivity"
            android:label="@string/title_activity_while_running_old" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.team05.activity.UseExistingRouteActivity" />
        </activity>
        <activity
            android:name=".activity.ActivityWhileRunningOld"
            android:label="@string/title_activity_activity_while_running_old" >
        </activity>
    </application>

</manifest>
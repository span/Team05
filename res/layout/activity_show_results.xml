<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<!--     Show time -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_of_run" />

        <TextView
            android:id="@+id/show_time_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".DisplayMessageActivity" />
    </LinearLayout>
    
<!--     Show distance -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance_of_run_result" />

        <TextView
            android:id="@+id/show_distance_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".DisplayMessageActivity" />
    </LinearLayout>
    
<!--     Show speed -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_of_run" />

        <TextView
            android:id="@+id/show_speed_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".DisplayMessageActivity" />
    </LinearLayout>
    
<!-- 	Show date -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date" />

        <TextView
            android:id="@+id/show_date_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".DisplayMessageActivity" />
    </LinearLayout>
    



    <Button
        android:id="@+id/delete_results_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_results" />

    
  	 <!-- TODO up button -->
    

</LinearLayout>
